{
  "name": "GFTool-Electron",
  "version": "0.0.1",
  "description": "GFTool Electron version",
  "main": "src/index.js",
  "repository": "https://github.com/Kreedzt/GFTool-Electron",
  "author": "Kreedzt",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "node envTool.js development && electron .",
    "lint:fix": "eslint --fix src/**/*.js",
    "build:win": "node envTool.js production && npm run lint:fix && electron-builder -w",
    "build:mac": "node envTool.js production && npm run lint:fix && electron-builder -m"
  },
  "build": {
    "appId": "com.gftool.electron.app",
    "productName": "GFTool-Electron",
    "files": [
      "src/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "asar": false,
    "extraFiles": [
      {
        "from": "web",
        "to": "web",
        "filter": [
          "**/*"
        ]
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "icon": "assets/app-icon/win/app.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "mac": {
      "category": "public.gftool-electron",
      "target": "dmg",
      "icon": "assets/app-icon/mac/app.icns"
    }
  },
  "dependencies": {
    "electron-log": "^4.1.2",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "electron": "^8.2.5",
    "electron-builder": "^22.6.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2"
  }
}
